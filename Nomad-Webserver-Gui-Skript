constraint = "${attr.consul.version} >= 1.8.0"


job "hello-world-webserver" {
  datacenters = ["dc1"]

  group "web" {
    count = 3

    constraint = "${attr.consul.version} >= 1.8.0"

    task "hello-world" {
      driver = "docker"

      config {
        image = "python:3.9-slim"
        args  = ["-m", "http.server", "8080"]
        entrypoint = ["python"]

        volumes = [
          "local/hello:/app"
        ]
      }

      template {
        data = <<EOF
<html>
  <head>
    <title>Hello World</title>
  </head>
  <body>
    <h1 style="color: blue;">Hello Welt</h1>
  </body>
</html>
EOF
        destination = "local/hello/index.html"
      }

      resources {
        cpu    = 100
        memory = 128
        network {
          port "http" {
            static = 8080
          }
        }
      }

      service {
        name = "hello-world"
        port = "http"

        check {
          type     = "http"
          path     = "/"
          interval = "10s"
          timeout  = "2s"
        }
      }
    }
  }
}















job "hello-world-webserver" {
  datacenters = ["dc1"]

  group "web" {
    count = 3

    task "hello-world" {
      driver = "docker"

      config {
        image = "python:3.9-slim"
        args  = ["-m", "http.server", "8080"]
        entrypoint = ["python"]

        volumes = [
          "local/hello:/app"
        ]
      }

      template {
        data = <<EOF
<html>
  <head>
    <title>Hello World</title>
  </head>
  <body>
    <h1 style="color: blue;">Hello Welt</h1>
  </body>
</html>
EOF
        destination = "local/hello/index.html"
      }

      resources {
        cpu    = 100 # in MHz
        memory = 128 # in MB
        network {
          port "http" {
            static = 8080
          }
        }
      }

      service {
        name = "hello-world"
        port = "http"

        tags = ["web", "load-balancer"]

        check {
          type     = "http"
          path     = "/"
          interval = "10s"
          timeout  = "2s"
        }
      }
    }
  }
}
