job "keepalived" {
  datacenters = ["dc1"]

  group "keepalived" {
    count = 1  # Eine Instanz für Keepalived

    task "keepalived" {
      driver = "docker"

      config {
        image = "osixia/keepalived:latest"
        ports = ["http"]
      }

      template {
        data = <<EOF
vrrp_instance VI_1 {
  state MASTER
  interface eth0  # Deine Netzwerkschnittstelle
  virtual_router_id 51
  priority 101  # Höhere Priorität auf dem Master-Server
  advert_int 1
  virtual_ipaddress {
      192.168.1.100  # Die virtuelle IP-Adresse
  }
}
EOF
        destination = "/etc/keepalived/keepalived.conf"
      }

      resources {
        cpu    = 100
        memory = 128
        network {
          port "http" {
            static = 80  # Port 80 für HTTP
          }
        }
      }

      service {
        name = "keepalived"
        port = "http"

        check {
          type     = "http"
          path     = "/"
          interval = "10s"
          timeout  = "2s"
        }
      }
    }
  }
}
