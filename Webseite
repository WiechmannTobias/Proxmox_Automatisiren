job "webserver" {
  datacenters = ["dc1"]

  group "web" {
    count = 3  # Anzahl der Instanzen

    task "webserver" {
      driver = "docker"

      config {
        image = "python:3.9-slim"
        args  = ["-m", "http.server", "8080"]
        entrypoint = ["python"]
      }

      template {
        data = <<EOF
<html>
  <head>
    <title>My High Availability Web Server</title>
  </head>
  <body>
    <h1 style="color: blue;">Webserver Instance</h1>
  </body>
</html>
EOF
        destination = "/app/index.html"
      }

      resources {
        cpu    = 100
        memory = 128
        network {
          port "http" {
            static = 8080  # Jeder Container l√§uft auf Port 8080
          }
        }
      }

      service {
        name = "webserver"
        port = "http"

        check {
          type     = "http"
          path     = "/"
          interval = "10s"
          timeout  = "2s"
        }
      }
    }
  }
}
